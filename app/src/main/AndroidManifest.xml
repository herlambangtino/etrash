<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.id.appskripsi.etrash"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconlogo"
        android:supportsRtl="true"
        xmlns:tools="http://schemas.android.com/tools"
        android:usesCleartextTraffic="true"
        tools:replace="android:icon"
        android:theme="@style/Theme.ETrash">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ActivityJenisSampah"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ActivityTips"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ActivityTps"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ActivityKecamatan"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ActivityDetailTPS"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ActivityKomplain"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ActivityProfil"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ActivityLogin"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ActivityRegister"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".NoConnectionActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>