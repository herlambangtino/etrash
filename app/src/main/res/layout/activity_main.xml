<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/iconbackground"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:text="Selamat Datang"
                android:textColor="#E6FFFFFF"
                android:textSize="15dp"
                android:textStyle="normal">
            </TextView>

            <TextView
                android:id="@+id/tvNmUser"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Nama User"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnProfil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/iconprofil">
            </ImageView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <androidx.cardview.widget.CardView
            android:layout_width="323dp"
            android:layout_height="40dp"
            android:backgroundTint="#76D783"
            app:cardCornerRadius="12dp">

            <EditText
                android:id="@+id/cari"
                android:padding="10dp"
                android:background="@null"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:hint="Cari..."/>

<!--            <SearchView-->
<!--                android:id="@+id/cari"-->
<!--                android:layout_width="323dp"-->
<!--                android:layout_height="wrap_content">-->
<!--            </SearchView>-->

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="128dp"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true">

        <androidx.cardview.widget.CardView
            android:layout_width="323dp"
            android:layout_height="123dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Aplikasi pemetaan lokasi penampungan tempat sampah sementara"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="normal">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="110dp"
                    android:background="@drawable/iconbacksampah">
                </ImageView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="22dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Kategori"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp">
        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="350dp"
        android:layout_marginTop="335dp"
        android:layout_centerHorizontal="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/pembuangan"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_row="0"
                android:layout_column="0"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imagepembuangan"
                            android:layout_width="95dp"
                            android:layout_height="52dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/icontruk">
                        </ImageButton>

                        <TextView
                            android:id="@+id/textpembuangan"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Pembuangan Sampah"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal">
                        </TextView>

                        <ImageView
                            android:layout_width="135dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/iconline">
                        </ImageView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/jenisampah"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="15dp"
                android:layout_row="0"
                android:layout_column="1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imagejenisampah"
                            android:layout_width="84dp"
                            android:layout_height="66dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/iconjenissampah">
                        </ImageButton>

                        <TextView
                            android:id="@+id/textjenisampah"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="6dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Jenis Sampah"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal">
                        </TextView>

                        <ImageView
                            android:layout_width="135dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="3dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/iconline">
                        </ImageView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/data"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="15dp"
                android:layout_row="1"
                android:layout_column="0"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imagekomplain"
                            android:layout_width="72dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/iconcomplain">
                        </ImageButton>

                        <TextView
                            android:id="@+id/textdata"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Komplain"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal">
                        </TextView>

                        <ImageView
                            android:layout_width="135dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/iconline">
                        </ImageView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tips"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_row="1"
                android:layout_column="1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imagetips"
                            android:layout_width="69dp"
                            android:layout_height="69dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/iconide">
                        </ImageButton>

                        <TextView
                            android:id="@+id/texttips"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Tips"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal">
                        </TextView>

                        <ImageView
                            android:layout_width="135dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/iconline">
                        </ImageView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </GridLayout>

    </RelativeLayout>

</RelativeLayout>